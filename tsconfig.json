{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*.astro"
      ],
      "@/layouts/*": [
        "src/layouts/*.astro"
      ],
      "@/utils": [
        "src/utils/index.ts"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/data/*": [
        "src/data/*"
      ],
      "@/site-config": [
        "src/site.config.ts"
      ]
    },
    "types": [
      "@astrojs/image/client"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".vscode",
    "dist"
  ]
}
